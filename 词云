    <!-- JavaScript代码 -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 获取所有DOM元素
            const elements = {
                uploadBtn: document.getElementById('uploadBtn'),
                imageInput: document.getElementById('imageInput'),
                imagePreview: document.getElementById('imagePreview'),
                previewContainer: document.getElementById('previewContainer'),
                ocrStatus: document.getElementById('ocrStatus'),
                textInput: document.getElementById('textInput'),
                generateBtn: document.getElementById('generateBtn'),
                resetBtn: document.getElementById('resetBtn'),
                colorTheme: document.getElementById('colorTheme'),
                shapeSelect: document.getElementById('shape'),
                wordcloudCanvas: document.getElementById('wordcloudCanvas'),
                defaultMessage: document.getElementById('defaultMessage'),
                wordTags: document.getElementById('wordTags'),
                wordCount: document.getElementById('wordCount'),
                uploadArea: document.getElementById('uploadArea')
            };

            // 配置与状态
            const config = {
                colorThemes: {
                    classic: ['#D4AF37', '#C41E3A', '#00509E', '#2E8B57', '#8B4513'],
                    vibrant: ['#FF6B35', '#00BBCC', '#9D4EDD', '#FFD166', '#06D6A0'],
                    pastel: ['#FFB7C5', '#A2D2FF', '#FFDAC1', '#B5EAD7', '#E2F0CB'],
                    monochrome: ['#2D3436', '#636E72', '#B2BEC3', '#DFE6E9'],
                    sunset: ['#FF6B6B', '#FFA726', '#FFE066', '#4ECDC4', '#5568FE']
                },
                stopWords: new Set([
                    '的', '了', '在', '是', '我', '有', '和', '就', '不', '人', '都', '一', 
                    '一个', '上', '也', '很', '到', '说', '要', '去', '你', '会', '着', 
                    '没有', '看', '好', '自己', '这', '那', '就', '都', '很', '让', '给',
                    '而', '但', '并', '且', '或', '如果', '因为', '所以', '然后', '最后'
                ])
            };

            let currentWordList = [];
            let isProcessing = false;

            // 显示状态信息
            function showStatus(type, message) {
                elements.ocrStatus.style.display = 'flex';
                elements.ocrStatus.className = 'status-indicator';
                
                const icons = {
                    processing: '<i class="fas fa-spinner fa-spin"></i>',
                    success: '<i class="fas fa-check-circle"></i>',
                    error: '<i class="fas fa-exclamation-circle"></i>'
                };
                
                elements.ocrStatus.innerHTML = `${icons[type] || '<i class="fas fa-info-circle"></i>'} <span>${message}</span>`;
                elements.ocrStatus.classList.add(`status-${type}`);
            }

            // 拍照上传功能
            elements.uploadBtn.addEventListener('click', () => {
                elements.imageInput.click();
            });

            elements.uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                elements.uploadArea.style.background = 'rgba(75, 108, 183, 0.1)';
            });

            elements.uploadArea.addEventListener('dragleave', () => {
                elements.uploadArea.style.background = '';
            });

            elements.uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                elements.uploadArea.style.background = '';
                const file = e.dataTransfer.files[0];
                if (file && file.type.startsWith('image/')) {
                    handleImageFile(file);
                }
            });

            elements.imageInput.addEventListener('change', function(event) {
                const file = event.target.files[0];
                if (file) {
                    handleImageFile(file);
                }
            });

            // 处理图片文件
            async function handleImageFile(file) {
                // 显示预览
                const reader = new FileReader();
                reader.onload = function(e) {
                    elements.imagePreview.src = e.target.result;
                    elements.previewContainer.style.display = 'block';
                };
                reader.readAsDataURL(file);
                
                // 开始OCR识别
                await recognizeTextWithOCR(file);
            }

            // OCR识别函数
            async function recognizeTextWithOCR(imageFile) {
                if (isProcessing) return;
                
                isProcessing = true;
                showStatus('processing', '正在识别图片中的文字，请稍候...');
                
                try {
                    // 使用Tesseract.js进行OCR识别
                    const { data: { text } } = await Tesseract.recognize(
                        imageFile,
                        'chi_sim+eng', // 简体中文+英文
                        {
                            logger: progress => {
                                if (progress.status === 'recognizing text') {
                                    const percent = Math.round(progress.progress * 100);
                                    showStatus('processing', `正在识别图片文字: ${percent}%`);
                                }
                            }
                        }
                    );
                    
                    // 识别成功，填充文本
                    elements.textInput.value = text;
                    showStatus('success', '文字识别完成！请核对上方文本内容。');
                    
                    // 自动提取关键词
                    extractKeywordsFromText();
                    
                } catch (error) {
                    console.error('OCR识别失败:', error);
                    showStatus('error', '识别失败，请尝试上传更清晰的图片，或手动输入文本。');
                } finally {
                    isProcessing = false;
                }
            }

            // 从文本提取关键词
            function extractKeywordsFromText() {
                const text = elements.textInput.value.trim();
                if (!text) {
                    currentWordList = [];
                    updateWordTags();
                    return;
                }
                
                // 清洗文本
                let cleanedText = text.toLowerCase()
                    .replace(/[^\u4e00-\u9fa5a-zA-Z]/g, ' ')
                    .replace(/\s+/g, ' ')
                    .trim();
                
                if (!cleanedText) {
                    currentWordList = [];
                    updateWordTags();
                    return;
                }
                
                // 简单分词（按空格）
                let words = cleanedText.split(' ');
                
                // 过滤停用词和短词
                words = words.filter(word => {
                    return word.length > 1 && !config.stopWords.has(word);
                });
                
                // 统计词频
                const wordFreq = {};
                words.forEach(word => {
                    wordFreq[word] = (wordFreq[word] || 0) + 1;
                });
                
                // 转换为词云格式并排序
                currentWordList = Object.keys(wordFreq)
                    .map(word => [word, wordFreq[word] * 12]) // 权重放大
                    .sort((a, b) => b[1] - a[1])
                    .slice(0, 100); // 最多100个词
                
                updateWordTags();
            }

            // 更新关键词标签显示
            function updateWordTags() {
                elements.wordTags.innerHTML = '';
                
                if (currentWordList.length === 0) {
                    elements.wordTags.innerHTML = 
                        '<div style="color: #999; padding: 20px; text-align: center; width: 100%;">关键词将在这里显示...</div>';
                    elements.wordCount.textContent = '已提取关键词：0个';
                    return;
                }
                
                // 显示前30个关键词
                const displayList = currentWordList.slice(0, 30);
                displayList.forEach(item => {
                    const word = item[0];
                    const freq = item[1] / 12; // 原始频率
                    
                    const tag = document.createElement('div');
                    tag.className = 'word-tag';
                    tag.innerHTML = `
                        <span>${word}</span>
                        <span class="count">${freq}</span>
                    `;
                    elements.wordTags.appendChild(tag);
                });
                
                const totalWords = currentWordList.reduce((sum, item) => sum + (item[1]/12), 0);
                elements.wordCount.innerHTML = 
                    `已提取关键词：<strong>${currentWordList.length}个</strong> | 总词数：<strong>${totalWords}</strong>`;
            }

            // 生成词云
            function generateWordCloud() {
                if (currentWordList.length === 0) {
                    extractKeywordsFromText();
                }
                
                if (currentWordList.length === 0) {
                    alert('请先输入一些文本内容来生成词云！');
                    return;
                }
                
                // 隐藏默认消息
                elements.defaultMessage.style.display = 'none';
                
                // 准备配置
                const selectedColors = config.colorThemes[elements.colorTheme.value] || config.colorThemes.classic;
                const selectedShape = elements.shapeSelect.value;
                
                // 词云配置
                const options = {
                    list: currentWordList,
                    fontFamily: 'Microsoft YaHei, SimHei, sans-serif',
                    fontWeight: 'bold',
                    color: function(word, weight) {
                        const index = Math.min(Math.floor(weight / 40), selectedColors.length - 1);
                        return selectedColors[index];
                    },
                    rotateRatio: 0.5,
                    rotationSteps: 2,
                    gridSize: Math.round(18 * elements.wordcloudCanvas.offsetWidth / 1024),
                    shape: selectedShape,
                    ellipticity: 0.8,
                    backgroundColor: '#ffffff',
                    shrinkToFit: true,
                    minSize: 10,
                    weightFactor: function(weight) {
                        return Math.pow(weight, 0.65) * elements.wordcloudCanvas.offsetWidth / 900;
                    }
                };
                
                // 清除旧词云并生成新词云
                WordCloud(elements.wordcloudCanvas, options);
            }

            // 重置所有内容
            function resetAll() {
                if (confirm('确定要清空所有输入和词云吗？此操作不可撤销。')) {
                    elements.textInput.value = '';
                    elements.imageInput.value = '';
                    elements.previewContainer.style.display = 'none';
                    elements.ocrStatus.style.display = 'none';
                    currentWordList = [];
                    
                    // 清除画布
                    const ctx = elements.wordcloudCanvas.getContext('2d');
                    ctx.clearRect(0, 0, elements.wordcloudCanvas.width, elements.wordcloudCanvas.height);
                    
                    // 显示默认消息
                    elements.defaultMessage.style.display = 'block';
                    
                    // 重置关键词显示
                    updateWordTags();
                    
                    showStatus('processing', '等待上传图片...');
                }
            }

            // 绑定事件
            elements.generateBtn.addEventListener('click', generateWordCloud);
            elements.resetBtn.addEventListener('click', resetAll);
            
            // 文本变化时自动提取关键词
            elements.textInput.addEventListener('input', function() {
                extractKeywordsFromText();
            });
            
            // 配置变化时重新生成词云
            elements.colorTheme.addEventListener('change', function() {
                if (currentWordList.length > 0) {
                    generateWordCloud();
                }
            });
            
            elements.shapeSelect.addEventListener('change', function() {
                if (currentWordList.length > 0) {
                    generateWordCloud();
                }
            });
            
            // 初始化
            showStatus('processing', '等待上传图片...');
            
            // 添加示例文本（可选）
            const exampleText = `孙悟空在陈皮村变成了一片最大的陈皮，藏在竹筛上。
二郎神变作一只陈皮雀，用灵敏的嗅觉发现了他。
陈皮 陈皮 陈皮 香气 竹筛 隐藏 发现 对决 
侨乡 江门 新会 创意 斗法 谐趣 神性 猴性 
小鸟天堂 百灵鸟 大榕树 骑楼 光影 岁月 痕迹 
茅龙笔 墨池 挥毫 文化 传承 变身 戏弄 机智`;
            
            elements.textInput.value = exampleText;
            extractKeywordsFromText();
            
            // 初始生成词云
            setTimeout(() => {
                generateWordCloud();
            }, 1000);
        });
    </script>
</body>
</html>
